      </form>

      <p id ='message1'></p><!--If error occur the second paragraph will be empty and this paragraph will show error message; add id-->
      <p id ='message2'></p><!--If no error, this p will show result and p1 will wont show anything; add id-->
    </div>


      {{>footer}}

    <script src="/js/app.js"></script>
    <!--to make sure that our script runs after all the elements are available -->
  </body>
